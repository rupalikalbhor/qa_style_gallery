click_on("featured") 
#sleep(5)
page.should have_css("a#featured.active")
sleep (5)
page.find_by_id("mc-header-sign-in").click
# click_on("mc-header-sign-in")
sleep(5)
page.fill_in('email', :with =>'bob')
sleep(5)


end 
end 


